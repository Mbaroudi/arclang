    <requirement id="SYS-PERF-003" name="SYS-PERF-003" description="System shall support 500+ concurrent users with workload isolation and auto-scaling" priority="High" />
    <requirement id="SYS-PERF-004" name="SYS-PERF-004" description="System shall process streaming data with end-to-end latency under 60 seconds for 99% of events" priority="Critical" />
    <requirement id="SYS-SCALE-001" name="SYS-SCALE-001" description="System shall automatically scale compute clusters from 2 to 200 nodes based on workload demand" priority="High" />
    <requirement id="SYS-SCALE-002" name="SYS-SCALE-002" description="System shall provide elastic cloud storage scaling from 100TB to 1PB+ with automatic tiering" priority="High" />
    <requirement id="SYS-GOV-001" name="SYS-GOV-001" description="System shall enforce granular RBAC at table, column, and row level with dynamic data masking for PII" priority="Critical" />
    <requirement id="SYS-GOV-002" name="SYS-GOV-002" description="System shall automatically detect and classify PII data using ML-based scanning" priority="Critical" />
    <requirement id="SYS-GOV-003" name="SYS-GOV-003" description="System shall capture and visualize end-to-end data lineage with column-level tracking" priority="Critical" />
    <requirement id="SYS-REL-001" name="SYS-REL-001" description="System shall perform automated incremental backups every 6 hours with point-in-time recovery" priority="Critical" />
    <requirement id="SYS-REL-002" name="SYS-REL-002" description="System shall meet disaster recovery SLA with RPO under 1 hour and RTO under 4 hours" priority="Critical" />
    <requirement id="SYS-MON-001" name="SYS-MON-001" description="System shall provide real-time monitoring of data pipelines with alerts for failures and SLA breaches" priority="High" />
    <requirement id="SYS-MON-002" name="SYS-MON-002" description="System shall track data quality metrics with automated anomaly detection and root cause analysis" priority="High" />
    <requirement id="SYS-MON-003" name="SYS-MON-003" description="System shall track cloud costs by workload and team with optimization recommendations" priority="Medium" />
